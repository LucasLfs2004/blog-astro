---
import BaseLayout from "./BaseLayout.astro";

const allPosts = await Astro.glob("../pages/posts/*.md");

const uniqueTags = [
  ...new Set(allPosts.map((post) => post.frontmatter.tags).flat()),
];

const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <div class="row">
    <img
      src={frontmatter.image.url}
      width="500px"
      alt={frontmatter.image.alt}
    />
    <div class="column">
      <p>{frontmatter.pubDate.toString().slice(0, 10).replaceAll("-", "/")}</p>
      <p><em>{frontmatter.description}</em></p>
      <p>Escrito por: <span>{frontmatter.author}</span></p>
    </div>
  </div>

  <!-- <div class="tags">
    {
      uniqueTags.map((tag) => (
        <p class="tag">
          <a href={`/tags/${tag}`}>{tag}</a>
        </p>
      ))
    }
  </div> -->
  <slot />
</BaseLayout>

<style>
  a {
    color: #00539f;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
  }

  .tag {
    margin: 0.25em;
    border: dotted 1px #a1a1a1;
    border-radius: 0.5em;
    padding: 0.5em 1em;
    font-size: 1.15em;
    background-color: #f8fcfd;
  }

  .row {
    display: flex;
    flex-direction: row;
    column-gap: 24px;
  }

  .row .column p {
    font-size: 18px;
  }

  .row .column p:last-child {
    font-weight: 600;
  }

  span {
    color: #1eccef;
  }
</style>
